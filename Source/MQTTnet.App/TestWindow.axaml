<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Name="Root"
        x:Class="MQTTnet.App.TestWindow"
        Title="TestWindow">
        
        <StackPanel>
                <TextBlock Text="{Binding ElementName=ListBox, Path=SelectedItem.Test, StringFormat={}{0} with string format in TextBlock}"></TextBlock>
                <TextBox IsReadOnly="True" Text="{Binding ElementName=ListBox, Mode=OneWay, Path=SelectedItem.Test, StringFormat={}{0} with string format in TextBox}"></TextBox>
                
                <ListBox x:Name="ListBox" MinHeight="200" Items="{Binding Items, ElementName=Root}">
                        
                </ListBox>
                
                <Button Content="ClearItems" Click="ClearItems"></Button>
                <Button Content="AddItems" Click="AddItems"></Button>
        </StackPanel>
        
</Window>
