<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="MQTTnet.App.Pages.Connection.MqttNetOptionsView">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"
                                  SharedSizeGroup="Column0" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Column="0"
                   Grid.Row="0"
                   Content="Enable logging" />
            <CheckBox Grid.Column="1"
                      Grid.Row="0"
                      IsChecked="{Binding EnableLogging}" />

            <Label Grid.Column="0"
                   Grid.Row="1"
                   Content="Enable packet inspection" />
            <CheckBox Grid.Column="1"
                      Grid.Row="1"
                      IsChecked="{Binding EnablePacketInspection}" />
        </Grid>

    </StackPanel>
</UserControl>