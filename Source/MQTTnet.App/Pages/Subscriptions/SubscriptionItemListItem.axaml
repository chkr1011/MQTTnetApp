<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:subscriptions="clr-namespace:MQTTnet.App.Pages.Subscriptions">

    <DataTemplate x:Key="SubscriptionItemViewModelListItem"
                  DataType="{x:Type subscriptions:SubscriptionItemViewModel}">

        <Grid ColumnDefinitions="*,Auto"
              Margin="10">

            <StackPanel>
                <TextBlock Text="{Binding Name}"
                           TextTrimming="CharacterEllipsis"
                           FontSize="12" />

                <TextBlock Margin="0,5,0,0"
                           TextTrimming="CharacterEllipsis"
                           ToolTip.Tip="{Binding Topic}"
                           FontSize="10"
                           Foreground="LightGray"
                           Classes="code_text"
                           Text="{Binding Topic}" />
            </StackPanel>

            <!-- The Delete Button -->
            <Button Grid.Column="1"
                    Margin="10,0,0,0"
                    Classes="tool_bar_button"
                    ToolTip.Tip="Delete subscription item"
                    Command="{Binding OwnerPage.RemoveItem}"
                    CommandParameter="{Binding .}">
                <Image Source="/Assets/Icons/Remove_16x.png" />
            </Button>
        </Grid>
    </DataTemplate>

</ResourceDictionary>