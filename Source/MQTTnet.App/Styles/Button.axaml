<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Button Classes="tool_bar_button">
            <Image Source="/Assets/Icons/Add_16x.png" />
        </Button>
    </Design.PreviewWith>

    <Style Selector="Button.tool_bar_button">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="MinWidth"
                Value="0" />
    </Style>
    
    <Style Selector="ToggleButton.tool_bar_button">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="MinWidth"
                Value="0" />
    </Style>

    <Style Selector="Button.tool_bar_button > Image">
        <Setter Property="Width"
                Value="16" />
        <Setter Property="Height"
                Value="16" />
    </Style>
    
    <Style Selector="ToggleButton.tool_bar_button > Image">
        <Setter Property="Width"
                Value="16" />
        <Setter Property="Height"
                Value="16" />
    </Style>
</Styles>