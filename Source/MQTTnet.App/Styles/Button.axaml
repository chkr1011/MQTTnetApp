<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Button Classes="image_button"
                Background="Green">
            <StackPanel>
                <Image Source="/Assets/Icons/RepeatButton_16x.png" />
                <TextBlock Text="Repeat" />
            </StackPanel>
        </Button>
    </Design.PreviewWith>

    <Style Selector="Button.image_button Image">
        <Setter Property="Width"
                Value="16" />
        <Setter Property="Height"
                Value="16" />
    </Style>

    <Style Selector="Button.image_button > StackPanel">
        <Setter Property="Orientation"
                Value="Horizontal" />
    </Style>

    <Style Selector="Button.image_button TextBlock">
        <Setter Property="Margin"
                Value="10,0,10,0" />
    </Style>
</Styles>