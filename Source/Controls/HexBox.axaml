<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:mqttMultimeter.Controls">
    <Design.PreviewWith>
        <controls:HexBox Width="800"
                         Height="600" />
    </Design.PreviewWith>

    <Style Selector="controls|HexBox">
        <Setter Property="Background"
                Value="#66000000" />
        <Setter Property="Template">
            <ControlTemplate TargetType="{x:Type controls:HexBox}">
                <Border CornerRadius="{TemplateBinding CornerRadius}"
                        TextElement.FontFamily="{StaticResource MonospaceFontFamily}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    <Grid RowDefinitions="*,Auto">

                        <!-- The hex content -->
                        <TextBox IsReadOnly="True"
                                 Name="PART_ContentTextBox"
                                 CaretIndex="{Binding CaretIndex, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                 AcceptsReturn="True">
                            <TextBox.Template>
                                <ControlTemplate>
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                                        <Grid Margin="10"
                                              RowDefinitions="Auto,Auto"
                                              ColumnDefinitions="Auto,Auto,Auto">

                                            <!-- Horizontal ruler -->
                                            <TextBlock Grid.Row="0"
                                                       Grid.Column="1"
                                                       FontSize="{StaticResource ControlContentThemeFontSize}"
                                                       VerticalAlignment="Top"
                                                       Margin="0,0,10,10"
                                                       Text="00 01 02 03 04 05 06 07 08 09 0A 0B 0C 0D 0E 0F"
                                                       Foreground="{StaticResource SystemAccentColor}" />

                                            <TextBlock Grid.Row="0"
                                                       Grid.Column="2"
                                                       Margin="10,0,0,10"
                                                       VerticalAlignment="Top"
                                                       FontSize="{StaticResource ControlContentThemeFontSize}"
                                                       Text="Decoded Text"
                                                       Foreground="{StaticResource SystemAccentColor}" />

                                            <!-- The hex content -->
                                            <TextPresenter x:Name="PART_TextPresenter"
                                                           Grid.Row="1"
                                                           Grid.Column="1"
                                                           Margin="0"
                                                           FontSize="12"
                                                           HorizontalAlignment="Stretch"
                                                           SelectionStart="{TemplateBinding SelectionStart}"
                                                           SelectionEnd="{TemplateBinding SelectionEnd}"
                                                           TextAlignment="{TemplateBinding TextAlignment}"
                                                           TextWrapping="{TemplateBinding TextWrapping}"
                                                           PasswordChar="{TemplateBinding PasswordChar}"
                                                           RevealPassword="{TemplateBinding RevealPassword}"
                                                           SelectionBrush="{TemplateBinding SelectionBrush}"
                                                           SelectionForegroundBrush="{TemplateBinding SelectionForegroundBrush}"
                                                           CaretBrush="{TemplateBinding CaretBrush}"
                                                           CaretIndex="{TemplateBinding CaretIndex}"
                                                           Text="{TemplateBinding Text}" />

                                            <!-- Decoded text -->
                                            <TextBlock Grid.Row="1"
                                                       Grid.Column="2"
                                                       Margin="10,0,0,0"
                                                       VerticalAlignment="Top"
                                                       Text="{Binding Preview, RelativeSource={RelativeSource AncestorType={x:Type controls:HexBox}}}"
                                                       x:Name="PART_PreviewTextBlock"
                                                       Foreground="Gray" />
                                        </Grid>
                                    </ScrollViewer>

                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>

                        <!-- The parsed values -->
                        <Border Background="#FF262626"
                                Grid.Row="1">
                            <controls:AutoGrid Margin="10,10,0,10"
                                               ColumnDefinitions="Auto,*,Auto,*"
                                               RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
                                <Grid.Styles>
                                    <Style Selector="Label">
                                        <Setter Property="Margin"
                                                Value="0,0,10,0" />
                                    </Style>
                                    <Style Selector="TextBox">
                                        <Setter Property="Margin"
                                                Value="0,0,10,0" />
                                        <Setter Property="IsReadOnly"
                                                Value="True" />
                                        <Setter Property="BorderThickness"
                                                Value="0" />
                                        <Setter Property="CornerRadius"
                                                Value="0" />
                                        <Setter Property="Background"
                                                Value="Transparent" />
                                    </Style>
                                </Grid.Styles>

                                <!-- Meta information -->
                                <Label Grid.Column="0"
                                       Classes="label"
                                       Content="Length:" />
                                <TextBox Grid.Column="1"
                                         x:Name="Length" />
                                
                                <!-- Position information -->
                                <Label Grid.Column="0"
                                       Classes="label"
                                       controls:AutoGrid.IsNextRow="True"
                                       Content="Offset:" />
                                <TextBox Grid.Column="1"
                                         x:Name="ValueOffset" />

                                <Label Grid.Column="2"
                                       Classes="label"
                                       Content="Remaining:" />
                                <TextBox Grid.Column="3"
                                         x:Name="ValueRemaining" />

                                <!-- Converted values -->
                                <Label controls:AutoGrid.IsNextRow="True"
                                       Classes="label"
                                       Grid.Column="0"
                                       Content="Hexadecimal:" />
                                <TextBox Grid.Column="1"
                                         x:Name="ValueHex" />

                                <Label Grid.Column="0"
                                       controls:AutoGrid.IsNextRow="True"
                                       Content="Binary:" />
                                <TextBox Grid.Column="1"
                                         x:Name="Value8Bit" />

                                <Label Grid.Column="2"
                                       Content="Boolean:" />
                                <TextBox Grid.Column="3"
                                         x:Name="ValueBoolean" />

                                <Label Grid.Column="0"
                                       controls:AutoGrid.IsNextRow="True"
                                       Content="Int8:" />
                                <TextBox Grid.Column="1"
                                         x:Name="ValueInt8" />

                                <Label Grid.Column="2"
                                       Content="Int16:" />
                                <TextBox Grid.Column="3"
                                         x:Name="ValueInt16" />

                                <Label Grid.Column="0"
                                       controls:AutoGrid.IsNextRow="True"
                                       Content="UInt16:" />
                                <TextBox Grid.Column="1"
                                         x:Name="ValueUInt16" />

                                <Label Grid.Column="2"
                                       Content="Int32:" />
                                <TextBox Grid.Column="3"
                                         x:Name="ValueInt32" />

                                <Label Grid.Column="0"
                                       controls:AutoGrid.IsNextRow="True"
                                       Content="UInt32:" />
                                <TextBox Grid.Column="1"
                                         x:Name="ValueUInt32" />

                                <Label Grid.Column="2"
                                       Content="Int64:" />
                                <TextBox Grid.Column="3"
                                         x:Name="ValueInt64" />

                                <Label Grid.Column="0"
                                       controls:AutoGrid.IsNextRow="True"
                                       Content="UInt64:" />
                                <TextBox Grid.Column="1"
                                         x:Name="ValueUInt64" />

                                <Label Grid.Column="2"
                                       Content="ASCII:" />
                                <TextBox Grid.Column="3"
                                         x:Name="ValueAscii" />

                                <Label Grid.Column="0"
                                       controls:AutoGrid.IsNextRow="True"
                                       Content="UTF-8:" />
                                <TextBox Grid.Column="1"
                                         x:Name="ValueUTF8" />

                                <Label Grid.Column="2"
                                       Content="UTF-32:" />
                                <TextBox Grid.Column="3"
                                         x:Name="ValueUTF32" />

                                <Label Grid.Column="0"
                                       controls:AutoGrid.IsNextRow="True"
                                       Content="Float:" />
                                <TextBox Grid.Column="1"
                                         x:Name="ValueFloat" />

                                <Label Grid.Column="2"
                                       Content="Double:" />
                                <TextBox Grid.Column="3"
                                         x:Name="ValueDouble" />
                            </controls:AutoGrid>
                        </Border>

                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>